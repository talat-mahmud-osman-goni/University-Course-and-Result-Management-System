@model UniversityResultManagement.Models.Teacher
@{
    ViewBag.Title = "Teacher Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    List<SelectListItem> getSelectDesignations = ViewBag.GetSelectDesignations;
    List<SelectListItem> getSelectDepartments = ViewBag.GetSelectDepartments;
    string message = ViewBag.Message;
    string email = ViewBag.Email;
}
@if (message == "yes")
{
    <div class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong> Teacher Saved Successfully.
    </div>
}
else if (message == "no")
{
    <div class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Failed!</strong> Save Failed.
    </div>
}
else if (message == "email not unique")
{
    <div class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Failed!</strong>Teacher's Email: "@email" Already Have in Teacher List.
    </div>
}
@using (Html.BeginForm())
{
    <div style="margin-left: 400px; width: 450px">
        <h1 style="font-size: 25px">Save Teacher</h1>
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control", @placeholder = "Name"})
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address)
            @Html.TextAreaFor(m => m.Address, new {@class = "form-control", @placeholder = "Address"})
            @Html.ValidationMessageFor(m => m.Address)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new {@type = "email", @class = "form-control", @placeholder = "Ex: abc@example.com"})
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ContactNo)
            @Html.TextBoxFor(m => m.ContactNo, new {@class = "form-control", @type = "number", @placeholder = "Contact Number"})
            @Html.ValidationMessageFor(m => m.ContactNo)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DesignationId)
            @Html.DropDownListFor(m => m.DesignationId, new SelectList(getSelectDesignations, "Value", "Text"), "Select Designation", new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.DesignationId)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DepartmentId)
            @Html.DropDownListFor(m => m.DepartmentId, new SelectList(getSelectDepartments, "Value", "Text"), "Select Department", new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.DepartmentId)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CreditTaken)
            @Html.TextBoxFor(m => m.CreditTaken, new {@class = "form-control", @type = "number", @placeholder = "Credit to be Taken"})
            @Html.ValidationMessageFor(m => m.CreditTaken)
        </div>
        <div class="form-group">
            <button class="btn btn-primary" value="save" type="submit">Save</button>
        </div>
    </div>
}